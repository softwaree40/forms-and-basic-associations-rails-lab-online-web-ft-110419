<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br/>
  <%= f.label :genre_id %>
  <%= f.text_field :genre_id, list: "all_genre" %>
  <datalist id="all_genre">
  <%Genre.all.each do |g| %>
  <option value="<%=g.id%>"> <%= g.name %></option>
  <%end%>
  </datalist> 
  <%=f.fields_for :notes do |n| %><br>
  <%=f.label :content %><br>
  <%=n.text_field :content %>
  <%end%>
  <%= f.submit %>
  <% end %>


