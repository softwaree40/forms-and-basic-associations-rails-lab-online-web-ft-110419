<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br/>
  <%= f.label :genre_id %>
  <%= f.text_field :genre_id, list: "all_genre" %>
  <datalist id="all_genre">
   <%Genre.all.each do |g| %>
  <option><%= g.name %></option>
  <%end%>
  </datalist> 
  <%= f.submit %>
  <% end %>


